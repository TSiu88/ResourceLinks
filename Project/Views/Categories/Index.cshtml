@{
  Layout = "_Layout";
}

@using ProjectName.Models;
@model List<ProjectName.Models.Category>;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

<ul>
  @foreach (Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
    <p>
      @Html.ActionLink("Edit", "Edit", new { id = category.CategoryId}) | 
      @Html.ActionLink("Delete", "Delete", new { id = category.CategoryId})
    </p>
  }
</ul>

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>